<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= posts.title %> " type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="title">Description</label>
    <textarea required name="description" id="description" class="form-control"><%= posts.description %></textarea>
</div>
<div class="form-group">
    <label for="title">Mark Down</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= posts.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>